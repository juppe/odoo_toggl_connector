<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="toggl_res_company_additions" model="ir.ui.view">
        <field name="name">toggl.res.company.additions</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="after">
                <group name="toggl" string="Toggl API" groups="odoo_toggl_connector.group_toggl_connector">
                    <field name="toggl_connector_id" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
