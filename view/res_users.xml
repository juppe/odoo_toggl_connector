<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="toggl_res_users_additions" model="ir.ui.view">
            <field name="name">res.users.view.users.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='messaging']" position="after">
                    <group name="toggl" string="Toggl API">
                        <field name="toggl_api_token"/>
                        <field name="toggl_workspace_id"/>
                        <field name="toggl_analytic_account"/>
                        <field name="toggl_skip_projects" widget="many2many">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
